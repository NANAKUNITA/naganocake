<div class="container my-5">
    
    <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
    
        <%= form_with model: @customer, url: admin_customer_path do |f| %> 
        
        <table class="row table">
            <tr>
                <th class="col-xs-2"><%= f.label :会員ID %></th>
                <td class="col-xs-10"><%= @customer.id %></td>
            </tr>
            
            <tr>
                <th><%= f.label :氏名 %></th>
                <td><%= f.text_field :last_name, class: "form-control" %><br>
                    <%= f.text_field :first_name, class: "form-control" %>
                </td>
            </tr>
            
            <tr>
                <th><%= f.label :フリガナ %></th>
                <td><%= f.text_field :last_name_kana, class: "form-control" %><br>
                    <%= f.text_field :first_name_kana, class: "form-control" %>
                </td>
            </tr>
            
            <tr>
                <th><%= f.label :郵便番号 %></th>
                <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            
            <tr>
                <th><%= f.label :住所 %></th>
                <td><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            
            <tr>
                <th><%= f.label :電話番号 %></th>
                <td><%= f.text_field :telephone_number, class: "form-control" %></td>
            </tr>
            
            <tr>
                <th><%= f.label :メールアドレス %></th>
                <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            
            <tr>
                <th><%= f.label :会員ステータス %></th>
                <td><%= f.select :is_deleted, [["有効会員","false"],["退会済み","true"]], class: "form-control" %></td>
            </tr>
        </table>

            <div class="row text-center">
                <%= f.submit "変更を保存", class: "btn btn-primary" %>
            </div>
            <% end %>
</div> 