<div class="container my-5">
    
    <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
    
    <div class="row">
        <%= form_with (model: @customer, url: admin_customer_path(@customer)) do |f| %> <!-- form_for(@customer, url: admin_customer_path) do |f|から書き換えした。ここは後ほど、再確認する。 -->
        <div class="col-xs-10">
            <div class="field">
                <%= f.label :会員ID, class: "col-xs-3" %>
                <%= f.text_field :id, autofocus: true %>
                <!-- autofocus: trueとは、ページを読み込んだらすぐにautofocus属性を記述している部分にカーソルが移動して入力状態になる、というもの。 -->
            </div><br>
            
            <div class="field">
                <%= f.label :氏名, class: "col-xs-3" %>
                <%= f.text_field :last_name, autofocus: true %>
                <%= f.text_field :first_name, autofocus: true %>
            </div><br>
            
            <div class="field">
                <%= f.label :フリガナ, class: "col-xs-3" %>
                <%= f.text_field :last_name_kana, autofocus: true %>
                <%= f.text_field :first_name_kana, autofocus: true %>
            </div><br>
            
            <div class="field">
                <%= f.label :郵便番号, class: "col-xs-3" %>
                <%= f.text_field :postal_code, autofocus: true %>
            </div><br>
            
            <div class="field">
                <%= f.label :住所, class: "col-xs-3" %>
                <%= f.text_field :address, autofocus: true %>
            </div><br>
            
            <div class="field">
                <%= f.label :電話番号, class: "col-xs-3" %>
                <%= f.text_field :telephone_number, autofocus: true %>
            </div><br>
            
            <div class="field">
                <%= f.label :メールアドレス, class: "col-xs-3" %>
                <%= f.text_field :email, autofocus: true %>
            </div><br>
            
            <!-- 会員ステータスが有効か退会かのラジオボタンの記述 -->
            <div class="row">
                <%= f.label :会員ステータス, class: "ml-3" %>
                  <div class="form-check ml-4">
                      <%= f.radio_button :is_deleted, :true %>
                      <%= f.label :is_deleted, "有効" %>
                      <%= f.radio_button :is_deleted, :false %>
                      <%= f.label :is_deleted, "退会" %>
                  </div>
            </div>
            
            <div class="row">
                <%= f.submit "変更を保存", class: "btn btn-primary mt-3 mx-auto" %>
            </div>
            <% end %>
        </div>
    </div>
</div>