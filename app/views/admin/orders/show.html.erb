<div class="container my-5">
    <div class="row">
        <div class="col-xs-12">
            <h2>注文履歴一覧</h2>
            <!-- 購入詳細情報 -->
            <table>
                <tr>
                    <th class="order-show">購入者</th>
                    <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
                </tr>
                <tr>
                    <!-- 注文個数の記入をする --><th class="order-show">注文個数</th>
                    <td><%= @order.amount %></td><!-- 数量のカラム名はamountであっているか? -->
                </tr>
                <tr><!-- 注文ステータスの記入 --></tr>
            </table>
        </div>
    </div>
    <div class="order-show">
        <div class="col-xs-9">
            <table class="table">
                <tr>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>製作ステータス</th>
                    <th></th>
                </tr>
                <% @order_items.each do |order_item| %>
                <tr>
                    <td><%= order_item.item.item</td>
                </tr>
            </table>
        </div>
    </div>
</div>