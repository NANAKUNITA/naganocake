<div class="container">
    <div class="row">
        
        <div class="col-xs-9">
            <h2>ジャンル編集</h2><br>
            
            <%= form_for @genres, url: admin_genres_path(@genre.id) do |f| %>
              <div class="field row">
                <label>ジャンル名</label>
                  <%= f.text_field :name %>
                  
                  <%= f.submit "変更を保存", class: "btn btn-primary" %>
              </div>
            <% end %>
        </div>
    </div>
</div>