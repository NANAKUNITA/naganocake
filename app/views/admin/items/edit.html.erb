<div class="container">
    <div class="row">
        <h2>商品編集</h2>
    </div>
    
    <div class="row d-flex justify-content-center">
        <% if flash[:item_updated_error] %>
        <span class="text-danger"><%= flash[:item_updated_error] %></span><!--Qこの文章の意味を質問する-->
        <% end %>
    </div>
    <%= form_with (model: @item, url: admin_item_path) do |f| %><!-- （）の中に＠itemなどを記入するときはどんなときなのかを質問する -->
    <div class="row mt-3">
        <div class="row mt-3">
            <div class="col-sm-3">
                <%= f.label :商品画像 %>
                <%= f.file_field :image, accept: "image/*" %> <!-- file_fieldとは、ファイルの投稿をするためのフィールドであり、画像ファイル以外に音声ファイルや動画ファイルも投稿できてしまうので、'accept: "image/*"を使い、画像ファイルしか投稿できなくする。-->
            </div>
            
            <div class="col-sm-5">
                <%= f.label :商品名, class: "col-sm-4" %>
                <%= f.text_field :name, class: "form-control col-sm-8" %>
            </div>
            
            <div class="form-group row">
                <%= f.label :商品説明, class: "col-sm-4">
                <%= f.text_area :introduction, class: "form-control col-sm-8" %>
            </div>
            
            <div class="form-group row">
                <%= f.label :ジャンル, class: "col-sm-4" %>
                <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control col-sm-8" %>
            </div>
            
            <div class="form-group row">
                <%= f.label :税抜価格, class: "col-sm-4" %>
                <%= f.text_field :price, class: "form-control col-sm-7" %>
                <span class="mt-auto ml-3">円</span> <!-- mtは上側のマージン、mlは左側のマージン-->
            </div>
            
            <div class="form-group row">
                <%= f.label :販売ステータス, class: "col-sm-4" %>
                <%= f.select :is_active, ["販売中","販売停止中"], class: "form-control col-sm-8" %>
            </div>
        </div>
        
        <div class="col-sm-3 mt-auto ml-5">
            <%= f.submit :編集する, class: "btn btn-primary" %>
        </div>
    </div>
    <% end %>
    
</div>