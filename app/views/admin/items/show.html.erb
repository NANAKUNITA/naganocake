<div class="container my-5">
  <div class="row">
    <h2>商品詳細</h2>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @item.get_image %>
    </div>
    <div class="col-md-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
              <%= @item.price %>(<%= (@item.price * 1.1).floor %>)円
            </td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <td><% if @item.is_active == true %>
                  販売中
                  <% else %>
                  販売停止
                  <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="offset-sm-9 col-sm-4">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
    </div>
  </div>
</div>