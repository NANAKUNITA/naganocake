<div class="container">
    <div class="row">
         <h2>商品詳細</h2><br>
        <div class="col-xs-4">
            <%= image_tag @item %> <!-- ！！！ここは後ほど！！！-->
        </div>
    <br><br><br><br>
        <div class="col-xs-8">
            <table class="table">
                <tbody>
                    <tr>
                        <td>商品名</td>
                        <td><%= @item.name %></td>
                    </tr>
                    
                    <tr>
                        <td>商品説明</td>
                        <td><%= @item.introduction %></td>
                    </tr>
                    
                    <tr>
                        <td>ジャンル</td>
                        <td><%= @item.genre.name%></td> <!-- genreのカラム名がnameなので、@item.genre.nameとなる。-->
                    </tr>
                    
                    <tr>
                        <td>税込価格（税抜価格）</td>
                        <td><%= (@item.price*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
                    </tr>
                    
                    <tr>
                        <td>販売ステータス</td>
                        <td><%= if @item.is_active == true %>
                        販売中
                        <% else %>
                        販売停止中
                        <% end %>
                        </td><!-- Q -->
                    </tr>
                </tbody>
            </table>
          <div class="col-md-offset-1 col-md-2 text-right">
              <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
          </div>
        </div>
    </div>
</div>