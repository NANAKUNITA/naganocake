<div class="container my-5">
<div class="row login-row">
    <div class="col-xs-3">
    </div>
    <div class="offset-sm-1 col-xs-9">
        <h2 class="red-border px-3 pb-1"><%= "商品一覧(全#{@amount}件)" %></h2>
        <% @items.each do |item| %>
          <div class="item-box">
            <table class="table">
                <tr>
                    <th><%= link_to item_path(item) do %>
                        <%= image_tag item.get_image %>
                    <% end %>
                    </th>
                </tr>
                <tr>
                    <th><%= item.name %></th>
                </tr>
                <tr>
                    <th>¥<%= (item.price*1.1).to_i %></th>
                </tr>
            </table>
          </div>
        <% end %>
        <%= paginate @items %>
    </div>
</div>
</div>