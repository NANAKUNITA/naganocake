<div class="container">
<h2>新規会員登録</h2>
<!-- form_withに変換するときに、idとclassを指定しなくても動く-->
<%= form_with model: @customer, url: customer_registration_path do |f| %>
<!-- %render "customers~"じゃなくて、"public"にしないとエラーになる-->
<%= devise_error_messages! %>
  <div class="row">
    <label class="col-lg-3">名前</label>
    <div class="col-lg-3">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "(姓)" %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "(名)" %>
    </div>
  </div><br>
  
  <div class="row">
    <label class="col-lg-3">フリガナ</label>
    <div class="col-lg-3">
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "(セイ)" %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "(メイ)" %>
    </div>
  </div><br>
  
  <div class="row">
    <label class="col-lg-3">メールアドレス</label>
    <div class="col-lg-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div><br>
  
  <div class="row">
    <label class="col-lg-3">郵便番号（ハイフンなし）</label>
    <div class="col-lg-3">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
    </div>
  </div><br>
  
  <div class="row">
    <label class="col-lg-3">住所</label>
    <div class="col-lg-6">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60" %>
    </div>
  </div><br>
  
  <div class="row">
    <label class="col-lg-3">電話番号</label>
    <div class="col-lg-3">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div><br>
  
  <div class="row">
    <label class="col-lg-3">パスワード
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上）</em>
    <% end %></label>
    <div class="col-lg-3">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div><br>

  <div class="row">
    <label class="col-lg-3">パスワード（確認用）</label>
    <div class="col-lg-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div><br>

  <div class="actions">
    <%= f.submit "新規会員登録", class: "btn btn-success" %>
  </div>
  
  <h3>既に登録済みの方</h3>
  <div class="col-lg-3">
    <%- if controller_name != 'sessions' %>
    <%= link_to "こちら", new_customer_session_path %>
    <% end %>
  </div>
<% end %>
</div>