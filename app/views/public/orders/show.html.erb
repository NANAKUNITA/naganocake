<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3">注文履歴詳細</h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-1 col-4">

      <div class="row">
        <strong class="red-border px-3">注文情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table table-borderless offset-1">
          <tbody>
            <tr class="brown-border">
              <td>注文日</td>
              <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            </tr>

            <tr class="brown-border">
              <td>配送先</td>
              <td>
                <%= "〒" + @order.postal_code + "  " + @order.address + "  " + @order.name %>
                <%#= "〒" + order.postal_code + "  " + order.address + "  " + order.name %>
              </td>
              <td><%= @order.address %></td>
            </tr>

            <tr class="brown-border">
              <td>支払い方法</td>
              <td><%= @order.payment_method %></td>
            </tr>

            <tr class="brown-border">
              <td>ステータス</td>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>

    <div class="offset-1 col-4">
      <div class="row">
        <strong class="red-border px-3">請求情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table table-borderless offset-1">
          <tbody>
            <tr class="brown-border">
              <td>商品合計</td>
              <td><%= @total %></td>
            </tr>

            <tr class="brown-border">
              <td>配送料</td>
              <td>800</td>
            </tr>

            <tr class="brown-border">
              <td>ご請求額</td>
              <td><%= @total+800 %></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-1">
      <strong class="red-border px-3">注文内容</strong>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-1 col-9">

      <table class="table table-borderless">
        <thead>
          <tr class="red-border">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
        <% @total+= (order_detail.item.price*1.1*order_detail.amount).floor %>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.item.price*1.1).floor %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.item.price*order_detail.amount)*1.1.floor %></td>
            <% #@total+= (cart_item.item.price*1.1*cart_item.amount).floor %>
        </tbody>
        <% end %>
      </table>

    </div>
   </div>
</div>